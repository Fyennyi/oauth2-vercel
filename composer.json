{
    "name": "fyennyi/oauth2-vercel",
    "description": "Vercel OAuth 2.0 Client Provider for The PHP League OAuth2-Client.",
    "license": "LicenseRef-CSSM-Unlimited-2.0",
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "vercel",
        "sign-in-with-vercel"
    ],
    "authors": [
        {
            "name": "Serhii Cherneha",
            "email": "chernegasergiy3@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "league/oauth2-client": "^2.0",
        "guzzlehttp/guzzle": "^7.0",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Fyennyi\\OAuth2\\Client\\Provider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fyennyi\\OAuth2\\Client\\Provider\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=max",
        "phpcs": "phpcs src --standard=PSR12",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
